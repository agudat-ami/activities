---
interface Props {
  width: number;
  height: number;
  direction: "left" | "right";
}

const { height, width, direction } = Astro.props;

const className = `origin-center ${direction === "left" ? "rotate-180" : ""}`;
---

<svg
  width={width}
  height={height}
  viewBox="0 0 8 8"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <path
    class={className}
    d="M1 0.540009L7 4.00001L1 7.46001"
    stroke="#231F20"
    stroke-linecap="round"
    stroke-linejoin="round"></path>
</svg>
